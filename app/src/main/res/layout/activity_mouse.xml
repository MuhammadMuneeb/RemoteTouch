<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootRel">
    <LinearLayout
        android:id="@+id/mousepadLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
         <TextView
            android:id="@+id/mousePad"
            android:layout_width="0sp"
             android:layout_weight="80"
            android:layout_height="400sp"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true" />
        <TextView
            android:id="@+id/mousePadScroller"
            android:layout_width="0sp"
            android:layout_weight="20"
            android:layout_height="400sp"
            android:background="@android:color/holo_blue_bright"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_below="@id/mousepadLin"
        android:orientation="horizontal"
        android:id="@+id/linLayout">

        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="50"

            android:layout_marginLeft="50sp"
            android:layout_marginRight="25sp"
            android:text="Left Click"
            android:id="@+id/leftClick"/>
        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="50"

            android:layout_marginLeft="25sp"
            android:layout_marginRight="50sp"
            android:text="Right Click"
            android:id="@+id/rightClick"/>

    </LinearLayout>
</RelativeLayout>