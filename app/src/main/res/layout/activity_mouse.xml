<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootRel">
    <LinearLayout
        android:id="@+id/mousepadLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
         <TextView
            android:id="@+id/mousePad"
            android:layout_width="0sp"
             android:layout_weight="80"
            android:layout_height="330sp"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true" />
        <TextView
            android:id="@+id/mousePadScroller"
            android:layout_width="0sp"
            android:layout_weight="20"
            android:layout_height="330sp"
            android:background="@android:color/holo_blue_bright"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10sp"
        android:weightSum="100"
        android:id="@+id/row2"
        android:layout_below="@id/mousepadLin">

        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="50"

            android:text="Left Click"
            android:id="@+id/leftClick"/>
        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Right Click"
            android:id="@+id/rightClick"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10sp"
        android:weightSum="100"
        android:id="@+id/row3"
        android:layout_below="@id/row2">
    <Button
        android:id="@+id/copy"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:text="Copy" />

    <Button
        android:id="@+id/paste"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:text="paste" />
    </LinearLayout>
</RelativeLayout>